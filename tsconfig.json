{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "strict": true,
    "target": "ES5",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts","./vitest.config.ts"]  
}